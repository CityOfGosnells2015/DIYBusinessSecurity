<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.mylayouts.jm.cityofgosnellsdiybusinesssecurity.ChecklistActivity">

    <HorizontalScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        android:scrollbars="none"
        android:id="@+id/horizontalScrollView">

        <LinearLayout
            android:id="@+id/mylayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnBuildingSecurity"
                android:text="Building CheckList"
                android:onClick="changeAdapter"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Internal Environment"
                android:id="@+id/btnInternalEnvironment"
                android:onClick="changeAdapter"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="External Environment"
                android:id="@+id/btnExternalEnvironment"
                android:onClick="changeAdapter"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Office Equipment and IT"
                android:id="@+id/btnOfficeEquipmentandIT"
                android:onClick="changeAdapter"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Property Marking"
                android:id="@+id/btnPropertyMarking"
                android:onClick="changeAdapter"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cash Processing"
                android:id="@+id/btnCashProcessing"
                android:onClick="changeAdapter"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="General Questions"
                android:id="@+id/btnGeneralQuestions"
                android:onClick="changeAdapter"/>
        </LinearLayout>
    </HorizontalScrollView>

    <TextView
        android:id="@+id/TxtCategory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Category"
        android:paddingBottom="20dp"
        android:paddingTop="20dp"
        android:textColor="#166CED"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_below="@+id/horizontalScrollView"/>

    <ListView
        android:id="@+id/list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:listitem="@layout/activity_display_checklist"
        android:layout_weight="1"
        android:layout_below="@+id/TxtCategory"
        android:layout_above="@+id/btnSave"/>

    <Button
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:text="Save"
        android:id="@+id/btnSave"

        android:visibility="visible"
        android:onClick="saveAnswers"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
