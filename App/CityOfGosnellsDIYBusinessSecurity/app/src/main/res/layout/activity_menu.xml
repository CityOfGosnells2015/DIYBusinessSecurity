<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.mylayouts.jm.cityofgosnellsdiybusinesssecurity.MenuActivity">

    <GridLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:columnWidth="50dp"
        android:gravity="center"
        android:numColumns="auto_fit"
        android:stretchMode="columnWidth">

        <Button
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:id="@+id/btnImportantNumbers"
            android:background="@drawable/ic_important"
            android:layout_row="0"
            android:layout_column="0"/>

        <Button
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:id="@+id/btnNotification"
            android:background="@drawable/ic_notifications"
            android:layout_row="0"
            android:layout_column="1" />

        <Button
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:id="@+id/btnPreference"
            android:background="@drawable/ic_preferences"
            android:layout_row="1"
            android:layout_column="0" />

        <Button
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:id="@+id/btnLink"
            android:background="@drawable/ic_links"
            android:layout_row="1"
            android:layout_column="1" />

        <Button
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:id="@+id/btnChecklist"
            android:background="@drawable/ic_checklist"
            android:layout_row="2"
            android:layout_column="0" />

        <Button
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:id="@+id/btnHelp"
            android:background="@drawable/ic_emergency"
            android:layout_row="2"
            android:layout_column="1" />
    </GridLayout>


</RelativeLayout>
