<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="4dp"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/TxtQuestion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#009A57"
        android:text="Question" />

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Switch
        android:id="@+id/mySwitch"

        android:paddingLeft="2px"
        android:layout_marginRight="2px"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:thumb="@drawable/button_effect"
        android:layout_weight="0.5"

        android:layout_centerHorizontal="true"


        />
    <Button
        android:id="@+id/myButton"

        android:layout_width="20px"
        android:layout_height="40px"
        android:paddingLeft="2px"
        android:layout_marginRight="2px"
        android:background="@drawable/button_na_effect"
        android:thumb="@drawable/button_na_effect"
        android:onClick="btnNAClick"
        android:layout_weight="0.5"



        android:layout_centerHorizontal="true"


        />
</LinearLayout>
    <ImageView
        android:id="@+id/dottedLine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_dottedline"
        android:layout_gravity="center_horizontal" />


</LinearLayout>