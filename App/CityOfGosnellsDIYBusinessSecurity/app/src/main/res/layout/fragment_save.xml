<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mylayouts.jm.cityofgosnellsdiybusinesssecurity.SaveFragment"
    android:clickable="true"
    android:theme="@style/checklistTheme"
    android:orientation="vertical">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Save Answers"
        android:gravity="center"
        android:id="@+id/txtCatagory"
        android:layout_above="@+id/topBar"
        android:background="@drawable/orange_bar"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="25dp"/>

    <LinearLayout android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/blue_bar"
        android:id="@+id/topBar"
        android:layout_below="@+id/txtCatagory"
        android:layout_above="@+id/fraglist"/>

    <RelativeLayout
        android:id="@+id/LinearLayout1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center"
        android:orientation="vertical" >

    <Button
        android:layout_width="139dp"
        android:layout_height="wrap_content"
        android:id="@+id/button_save"
        android:layout_gravity="center"
        android:background="@drawable/btn_save" />

    </RelativeLayout>

</LinearLayout>
