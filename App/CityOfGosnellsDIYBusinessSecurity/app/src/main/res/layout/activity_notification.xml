<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.mylayouts.jm.cityofgosnellsdiybusinesssecurity.NotificationActivity">

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Daily Notifications"
        android:textOn="On"
        android:textOff="Off"
        android:id="@+id/switchDailyButton"
        android:layout_marginTop="43dp"
        android:onClick="onDailyNotification"/>

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Weekly Notifications"
        android:textOn="On"
        android:textOff="Off"
        android:id="@+id/switchWeeklyButton"
        android:onClick="onWeeklyNotification"
        android:layout_below="@+id/switchDailyButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="134dp" />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Monthly Notifications"
        android:textOn="On"
        android:textOff="Off"
        android:id="@+id/switchMonthlyButton"
        android:onClick="onMonthlyNotification"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/switchWeeklyButton"
        android:layout_alignEnd="@+id/switchWeeklyButton"
        android:layout_marginBottom="184dp" />

</RelativeLayout>
