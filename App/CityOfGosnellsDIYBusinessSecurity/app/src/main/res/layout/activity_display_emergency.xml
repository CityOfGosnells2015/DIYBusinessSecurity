<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="4dp"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/nameEmergency"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Text value"/>

    <ImageView
        android:id="@+id/phoneIcon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_call"
        android:layout_marginLeft="80dp"
        android:layout_marginStart="80dp"
        android:layout_above="@+id/dottedLine"
        android:layout_toRightOf="@+id/nameEmergency"
        android:layout_toEndOf="@+id/nameEmergency" />

    <ImageView
        android:id="@+id/dottedLine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_dottedline"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/nameEmergency"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


</RelativeLayout>